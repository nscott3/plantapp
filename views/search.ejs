<div class="search_container">
    <h2 class="search_title">Search</h2>
    <div class="searchbar">
        <input type="text" class="search_input" placeholder="Search..">
        <button class="search_button" id="search_button">
            <svg class="search_icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" height="16" width="16">
                <path d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6 .1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"/>
            </svg>
        </button>
    </div>
    <h2 class="filter_title">Filter Options</h2>
    <div class="filter_container">
        <input type="checkbox" class="filter_checkbox" id="identificationCompleted">
        <label for="identificationCompleted" class="filter_label">Identification Completed</label>
        <br>
        <input type="checkbox" class="filter_checkbox" id="identificationNotCompleted">
        <label for="identificationNotCompleted" class="filter_label">Identification Not Completed</label>
        <br>
        <br>
        <input type="checkbox" class="filter_checkbox" id="hasFlowers">
        <label for="hasFlowers" class="filter_label">Has Flowers</label>
        <br>
        <input type="checkbox" class="filter_checkbox" id="noFlowers">
        <label for="noFlowers" class="filter_label">No Flowers</label>
        <br>
        <br>
        <input type="checkbox" class="filter_checkbox" id="hasLeaves">
        <label for="hasLeaves" class="filter_label">Has Leaves</label>
        <br>
        <input type="checkbox" class="filter_checkbox" id="noLeaves">
        <label for="noLeaves" class="filter_label">No Leaves</label>
        <br>
        <br>
        <input type="checkbox" class="filter_checkbox" id="hasFruitsOrSeeds">
        <label for="hasFruitsOrSeeds" class="filter_label">Has Fruits/Seeds</label>
        <br>
        <input type="checkbox" class="filter_checkbox" id="noFruitsOrSeeds">
        <label for="noFruitsOrSeeds" class="filter_label">No Fruits/Seeds</label>
    </div>
    <h2 class="sort_title">Sort Options</h2>
    <div class="sort_container">
        <input type="radio" class="sort_radio" id="sortNone" name="sort" value="sortNone" checked>
        <label for="sortNone" class="sort_label">None</label>
        <br>
        <br>
        <input type="radio" class="sort_radio" id="sortDateOld" name="sort" value="sortDateOld">
        <label for="sortDateOld" class="sort_label">Date (Oldest)</label>
        <br>
        <input type="radio" class="sort_radio" id="sortDateNew" name="sort" value="sortDateNew">
        <label for="sortDateNew" class="sort_label">Date (Newest)</label>
        <br>
        <br>
        <input type="radio" class="sort_radio" id="sortNameAsc" name="sort" value="sortNameAsc">
        <label for="sortNameAsc" class="sort_label">Name (A-Z)</label>
        <br>
        <input type="radio" class="sort_radio" id="sortNameDesc" name="sort" value="sortNameDesc">
        <label for="sortNameDesc" class="sort_label">Name (Z-A)</label>
        <br>
        <br>
        <input type="radio" class="sort_radio" id="distanceAsc" name="sort" value="distanceAsc">
        <label for="distanceAsc" class="sort_label">Distance (Closest)</label>
        <br>
        <input type="radio" class="sort_radio" id="distanceDesc" name="sort" value="distanceDesc">
        <label for="distanceDesc" class="sort_label">Distance (Furthest)</label>
    </div>
</div>